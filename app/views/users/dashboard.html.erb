<% content_for :meta_title, "Your donations #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, "View all of your product listings and their status." %>

<div class="container my-5">
<h1> My donations </h1>
 <div class="row m-0">
    <div class="col p-0">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="true">Pending</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">Accepted</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="declined-tab" data-bs-toggle="tab" data-bs-target="#declined" type="button" role="tab" aria-controls="declined" aria-selected="false">Declined</button>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="accepted" role="tabpanel" aria-labelledby="pending-tab">
          <% if @accepted_products.any? %>
            <div>
              <% @accepted_products.each do |product| %>
                <%= render "product_card", product: product %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="tab-pane fade" id="declined" role="tabpanel" aria-labelledby="accepted-tab">
          <% if @declined_products.any? %>
            <div>
              <% @declined_products.each do |product| %>
                <%= render "product_card", product: product %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="declined-tab">
          <% if @pending_products.any? %>
            <div>
              <% @pending_products.each do |product| %>
                <%= render "product_card", product: product %>
               <% end %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
